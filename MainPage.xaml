<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PokerClickerV3"
             x:Class="PokerClickerV3.MainPage">

    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal" VerticalOptions="Center">
            <Label Text="Your App Name" FontSize="20" FontAttributes="Bold" />
            <Image Source="your_logo.png" HeightRequest="40" WidthRequest="40" />
        </StackLayout>
    </NavigationPage.TitleView>

    <StackLayout>
        <!-- Add your main content here -->
        <Button Text="2" Clicked="OnCounterClicked" />
        <Button Text="1" Clicked="OnCounterClicked" />

    </StackLayout>

</ContentPage>
